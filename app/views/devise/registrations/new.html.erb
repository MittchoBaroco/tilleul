<div class="center w_15 login">
  <h2>Sign up</h2>

  <div class="mb1">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field mb4">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, required: true %>
    </div>

    <div class="field mb4">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, required: true %>
    </div>

    <div class="field mb4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true %>
    </div>

    <div class="field mb4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", required: true %>
    </div>

    <div class="field mb4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
    </div>

    <div class="actions mb1 mt1">
      <%= f.submit "Sign up", class: 'btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
